<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".presentation.result.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_acne_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="24dp"
                android:text="@string/tv_acne_name_pc"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_acne_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="@string/tv_acne_desc_pc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_saran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/saran"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lorem_saran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:text="@string/tv_acne_saran_pc"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/solusi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lorem_solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:text="@string/tv_acne_solusi_pc"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40sp"
                android:text="@string/done"
                android:id="@+id/btn_done"/>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>